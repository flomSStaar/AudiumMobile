<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uqac.dim.audium">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:launchMode="singleTask"

        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/appicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Audium"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Main"
            android:exported="false" />
        <activity
            android:name=".activity.Register"
            android:exported="false" />
        <activity
            android:name=".activity.Settings"
            android:exported="false" />
        <activity
            android:name=".activity.admin.UserList"
            android:exported="false" />
        <activity
            android:name=".activity.admin.UserProfile"
            android:exported="false" />
        <activity
            android:name=".activity.admin.ArtistList"
            android:exported="false" />
        <activity
            android:name=".activity.admin.ArtistProfile"
            android:exported="false" />
        <activity
            android:name=".activity.admin.TrackList"
            android:exported="false" />
        <activity
            android:name=".activity.admin.AddArtist"
            android:exported="false" />
        <activity
            android:name=".activity.admin.AddAlbum"
            android:exported="false" />
        <activity
            android:name=".activity.admin.AddTrack"
            android:exported="false" />
        <activity
            android:name=".activity.AlbumPage"
            android:exported="false" />
        <activity
            android:name=".activity.chooser.ArtistChooser"
            android:exported="false" />
        <activity
            android:name=".activity.chooser.AlbumChooser"
            android:exported="false" />
        <activity
            android:name=".activity.admin.TrackPage"
            android:exported="false" />
        <activity
            android:name=".activity.AddPlaylist"
            android:exported="false" />
        <activity
            android:name=".activity.chooser.PlaylistChooser"
            android:exported="false" />
        <activity
            android:name=".activity.ModifyPlaylist"
            android:exported="false" />
        <activity
            android:name=".activity.Searchable"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <service android:name=".MediaService" />
        <receiver
            android:name=".NotificationActionService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <service android:name=".OnClearFromRecentService" />
    </application>

</manifest>