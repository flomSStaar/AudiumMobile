<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:orientation="vertical">

    <TextView
        style="@style/Theme.Audium.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20sp"
        android:text="@string/albums_informations"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_album"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_album_name"
                style="@style/Theme.Audium.SubTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_album_artist"
                style="@style/Theme.Audium.SubText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_album_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp">

        <ImageButton
            android:id="@+id/btn_modify_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mediabutton3"
            android:src="@drawable/ic_edit"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/btn_delete_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/mediabutton3"
            android:src="@drawable/ic_delete"
            android:textColor="@color/white" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_album_tracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        android:dividerHeight="10sp" />
</LinearLayout>