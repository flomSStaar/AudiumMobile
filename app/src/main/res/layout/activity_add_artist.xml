<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20sp"
                android:gravity="center"
                android:text="@string/add_an_artist"
                android:textSize="40sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="@string/first_name"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/artist_first_name"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20sp"
                android:inputType="text"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginVertical="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="@string/last_name"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/artist_last_name"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20sp"
                android:inputType="text"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginVertical="10sp"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="@string/age"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/artist_age"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20sp"
                android:inputType="number"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginVertical="10sp"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="@string/stage_name"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/artist_stage_name"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20sp"
                android:inputType="text"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginVertical="10sp"
        />

            <LinearLayout
                android:id="@+id/layout_image_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:text="@string/image"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_artist"
                        android:layout_width="150sp"
                        android:layout_height="150sp"
                        android:layout_margin="20dp"
                        android:scaleType="centerCrop"/>

                    <Button
                        android:id="@+id/btn_choose_artist_image_file"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/custom_button"
                        android:text="@string/choose_file"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_marginRight="5sp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"
                android:onClick="addArtist"
                android:text="@string/add"
                android:background="@drawable/custom_button"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>