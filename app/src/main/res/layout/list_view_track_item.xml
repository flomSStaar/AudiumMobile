<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_track_number"
        style="@style/Theme.Audium.ListText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_track"
        android:layout_width="100sp"
        android:layout_height="match_parent"
        android:contentDescription="@string/track_image"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5sp"
        android:layout_weight="13"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_track_name"
            style="@style/Theme.Audium.SubSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp" />

        <TextView
            android:id="@+id/tv_artist_name"
            style="@style/Theme.Audium.SubSubText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_track_name" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_track_infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10sp"
        android:background="@drawable/mediabutton3"
        android:contentDescription="@string/track_infos"
        android:src="@drawable/ic_infos" />

</LinearLayout>