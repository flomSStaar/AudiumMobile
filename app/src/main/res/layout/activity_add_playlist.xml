<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:gravity="center"
                android:text="@string/add_a_playlist"
                android:textSize="40sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="@string/title"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/playlist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:inputType="text"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="@string/description"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/playlist_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:inputType="text"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/layout_image_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:text="@string/image_path"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/playlist_image_path"
                        android:layout_width="150sp"
                        android:layout_height="150sp"
                        android:layout_margin="20dp"
                        android:scaleType="centerCrop"/>

                    <Button
                        android:id="@+id/btn_choose_playlist_image_file"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/custom_button"
                        android:text="@string/choose_file"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/tracks"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_margin="20sp" />

            <Button
                android:id="@+id/add_playlist_frag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="addPlaylist"
                android:text="@string/add"
                android:background="@drawable/custom_button"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>