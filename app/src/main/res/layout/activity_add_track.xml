<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20sp"
            android:gravity="center"
            android:text="@string/add_track"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/layout_track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/track_name"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/edit_track_name"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginVertical="10sp"
                android:background="@drawable/custom_button"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_music_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/music_path"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_track_path"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="4"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginVertical="10sp"
                    android:background="@drawable/custom_button"/>

                <Button
                    android:id="@+id/btn_choose_track_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/choose_file"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_image_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="@string/image_path"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_image_path"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_margin="20dp"
                    android:scaleType="centerCrop"/>

                    <Button
                        android:id="@+id/btn_choose_image_file"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/custom_button"
                        android:text="@string/choose_file"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white" />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_artist_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artist_id"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_artist_id"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10sp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="4"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <Button
                    android:id="@+id/btn_choose_artist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/choose_an_artist"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_album_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/album_id"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_album_id"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_button"
                    />

                <Button
                    android:id="@+id/btn_choose_album"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/choose_an_album"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="@string/add"
            android:background="@drawable/custom_button"
            android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>